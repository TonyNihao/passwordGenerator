COMPOSE_ARGS=' -f jenkins/jenkins.yml -p jenkins'
#remove and stop running containers
docker-compose $COMPOSE_ARGS stop 
docker-compose $COMPOSE_ARGS rm -s -f -v

#create project
docker-compose $COMPOSE_ARGS build --no-cache
docker-compose $COMPOSE_ARGS up -d

#run unit test
docker-compose $COMPOSE_ARGS run --rm -e ENV=UNIT ERR=$?

if [ $ERR -eq 0 ]; then
	echo "Tests complited"
else
	echo "Tests filed!"
fi 
return $ERR
